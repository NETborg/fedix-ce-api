{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div style="color: darkred">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('app_login') }}" method="post">
        <div>
            <label for="username">
                Username:
                <input id="username" name="_username" value="{{ last_username }}" />
            </label>
        </div>
        <div>
            <label for="password">
                Password:
                <input id="password" name="_password" type="password" value="" />
            </label>
        </div>
        <div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
        </div>
        <div>
            <button type="submit">Login</button>
        </div>
    </form>
{% endblock %}
